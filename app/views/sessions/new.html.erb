<%= form_for @user, url: login_path do |f| %>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
  <% end %>
<% end %>

    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Login" %>

<% end %>
