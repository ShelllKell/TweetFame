<div class='form'>
<%= form_for @user, url: signup_path, method: :post do |f| %>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  <% end %>

  <%= f.label :name, autofocus: true %>
  <p>
  <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
  <p>
  <%= f.label :email, autofocus: true %>
  <p>
  <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
  <p>
  <%= f.label :password, autofocus: true %>
  <p>
  <%= f.password_field :password, autofocus: true, placeholder: "Password" %>
  <p>
  <%= f.submit "Sign Up", class: 'btn btn-info' %>

<% end %>
</div>
